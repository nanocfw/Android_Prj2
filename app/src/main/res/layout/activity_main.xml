<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:src="@drawable/logo_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/edtminimo"
            android:layout_width="130dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Limite Mínimo"/>

        <EditText
            android:id="@+id/edtmaximo"
            android:layout_width="130dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:hint="Limite Máximo"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnsortear"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Sortear"
            android:onClick="sorteioSimples"
            android:background="#696969"
            android:textColorHint="@android:color/white"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edtresultado"
            android:layout_gravity="center|top"
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Resultado"
            android:enabled="false"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnsorteioPersonalizado"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Personalizar Sorteio"
            android:onClick="sorteioPersonalizado"
            android:textColorHint="@android:color/white"
            android:background="#696969"/>
    </RelativeLayout>
</LinearLayout>
